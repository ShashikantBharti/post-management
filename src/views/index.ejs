<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register & Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="flex items-center justify-center h-screen bg-zinc-900">

  <div class="w-full max-w-md p-8 space-y-8 bg-zinc-800 rounded-lg shadow-lg">
    <div class="text-center">
      <h2 class="text-2xl font-bold text-zinc-300" id="form-title">Register</h2>
      <!-- Display Success or Error Message -->
      <% if (typeof message !=='undefined' ) { %>
        <div id="message"
          class="relative p-3 mt-4 text-white <%= message.includes('successfully') ? 'bg-green-500' : 'bg-red-500' %> rounded">
          <span>
            <%= message %>
          </span>
          <!-- Close Button -->
          <button onclick="dismissMessage()"
            class="absolute top-1 right-4 text-white font-bold text-2xl">&times;</button>
        </div>
        <% } %>

    </div>
    <form id="register-form" class="space-y-4" action="/register" method="post">
      <div class="flex flex-col space-y-1">
        <label class="text-gray-600">Name</label>
        <input type="text" class="w-full px-4 py-2 rounded-md outline-none bg-zinc-900 text-white"
          placeholder="Full Name" name="name" required>
      </div>
      <div class="flex flex-col space-y-1">
        <label class="text-gray-600">Email</label>
        <input type="email" class="w-full px-4 py-2 rounded-md outline-none bg-zinc-900 text-white"
          placeholder="Email Address" name="email" required>
      </div>
      <div class="flex flex-col space-y-1">
        <label class="text-gray-600">Password</label>
        <input type="password" class="w-full px-4 py-2 rounded-md outline-none bg-zinc-900 text-white"
          placeholder="Password" name="password" required>
      </div>
      <button type="submit"
        class="w-full px-4 py-2 text-white bg-blue-500 rounded-md hover:bg-blue-600">Register</button>
    </form>

    <form id="login-form" class="space-y-4 hidden" action="/login" method="post">
      <div class="flex flex-col space-y-1">
        <label class="text-gray-600">Email</label>
        <input type="email" class="w-full px-4 py-2 rounded-md outline-none bg-zinc-900 text-white"
          placeholder="Email Address" name="email" required>
      </div>
      <div class="flex flex-col space-y-1">
        <label class="text-gray-600">Password</label>
        <input type="password" class="w-full px-4 py-2 rounded-md outline-none bg-zinc-900 text-white"
          placeholder="Password" name="password" required>
      </div>
      <button type="submit" class="w-full px-4 py-2 text-white bg-blue-500 rounded-md hover:bg-blue-600">Login</button>
    </form>

    <div class="text-center">
      <p class="text-gray-400">
        <span id="toggle-text">Already have an account?</span>
        <button class="text-blue-500 hover:underline" onclick="toggleForm()">Login</button>
      </p>
    </div>
  </div>

  <script src="/js/script.js">

  </script>

</body>

</html>